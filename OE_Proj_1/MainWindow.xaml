<Window x:Class="OE_Proj_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OE_Proj_1"
        xmlns:mw="clr-namespace:OE_Proj_1.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <mw:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=a}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=b}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=numberOfBits}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=populationAmount}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=epochs}"/>
        <ComboBox HorizontalAlignment="Left" Margin="170,187,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding selection}">
            <ComboBoxItem Content="BEST"></ComboBoxItem>
            <ComboBoxItem Content="ROULETTE"></ComboBoxItem>
            <ComboBoxItem Content="TOURNAMENT"></ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="83,13,43.8,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Begin of range" />
        <TextBlock HorizontalAlignment="Left" Margin="83,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="End of range" />
        <TextBlock HorizontalAlignment="Left" Margin="59,97,0,0" TextWrapping="Wrap" Text="Population amount" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="81,69,0,0" TextWrapping="Wrap" Text="Number of bits" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="59,126,0,0" TextWrapping="Wrap" Text="Number of epochs" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,187,0,0" TextWrapping="Wrap" Text="Selection method" VerticalAlignment="Top"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="170,239,0,0" VerticalAlignment="Top" Width="75" Click="calculate"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="170,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding crossPercentage}"/>
        <TextBlock HorizontalAlignment="Left" Margin="60,154,0,0" TextWrapping="Wrap" Text="Cross percentage" VerticalAlignment="Top"/>

    </Grid>
</Window>
